/**index.wxss**/
.container {
  border-top:1rpx solid #e5e5e5;
  padding:15rpx 20rpx;
} 

.header #add{
  width:30rpx;
  height:30rpx;
  margin-right:10rpx;
}
.header{
  display: flex;
  align-items: center;
  border:1rpx solid #e5e5e5;
  border-radius:10rpx;
  padding:15rpx;
  box-shadow: 0 0 5rpx #e5e5e5;

}
.todos{
  margin:25rpx 0;
  border:1rpx solid #e5e5e5;
  border-radius: 10rpx;
  box-shadow: 0 0 5rpx #e5e5e5;

}

.todos view{
  border-top:1rpx solid #e5e5e5;
  padding:15rpx 10rpx;
  display:flex;
  align-items: center;
}
.todos view text{
  flex:1;
  padding-left:20rpx;
  color:#444;
  font-size:30rpx;
}
.todos view.completed text{
  text-decoration:line-through;
  color:#888;
}
.todos view:first-child{
  border-top:0;
}
.null{
  text-align: center;
  margin-top:200rpx;
  font-size: 80rpx;
  
}
.footer{
  display:flex;
  justify-content: space-around;
  font-size: 30rpx;
  color:#333;
}